<language id="ini-squeletml" _name=".ini Squeletml" version="2.0" _section="Others">
	<metadata>
		<property name="globs">*.ini.txt</property>
	</metadata>
	
	<styles>
		<style id="section" _name="Section" map-to="def:type"/>
		<style id="parametre" _name="Paramètre" map-to="def:identifier"/>
		<style id="separateur" _name="Séparateur" map-to="def:keyword"/>
	</styles>
	
	<definitions>
		<context id="ini-squeletml">
			<include>
				<context id="section" style-ref="section">
					<match>^\s*\[[^\]]+\]\s*$</match>
				</context>
				
				<context id="parametre">
					<match>^([^=]+)(=)</match>
					<include>
						<context sub-pattern="1" style-ref="parametre"/>
						<context sub-pattern="2" style-ref="separateur"/>
					</include>
				</context>
			</include>
		</context>
	</definitions>
</language>
